{
  "name": "@shelf/postgres-local",
  "version": "1.0.0",
  "description": "Run Postgres locally",
  "keywords": [
    "postgres",
    "postgres local"
  ],
  "homepage": "https://github.com/shelfio/postgres-local#readme",
  "bugs": {
    "url": "https://github.com/shelfio/postgres-local/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shelfio/postgres-local.git"
  },
  "license": "MIT",
  "author": {
    "name": "Dmytro Harazdovskyi",
    "email": "dmytro.harazdovskyi@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:code",
    "build:code": "babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "yarn test --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "jest src --runInBand",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "cwd": "0.10.0",
    "debug": "4.3.4",
    "postgres": "3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@shelf/babel-config": "1.2.0",
    "@shelf/eslint-config": "2.16.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.9",
    "@types/cwd": "0.10.0",
    "@types/debug": "4.1.7",
    "@types/jest": "29.2.3",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16",
    "babel-jest": "29.3.1",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
